rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rate limit collection - only accessible by Cloud Functions
    match /rateLimits/{document=**} {
      allow read, write: if false;
    }

    // Monthly usage limits - only accessible by Cloud Functions
    match /limits/{document=**} {
      allow read, write: if false;
    }

    // Analytics collection - only accessible by Cloud Functions
    // Stores only anonymous aggregated data (no personal information)
    match /analytics/{document=**} {
      allow read, write: if false;
    }

    // Add your other collection rules here
    // Example:
    // match /users/{userId} {
    //   allow read, write: if request.auth != null && request.auth.uid == userId;
    // }
  }
}
